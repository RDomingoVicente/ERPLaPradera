<view>
    <columns>
        <group name="verifactu" title="verifactu" icon="fa-solid fa-qrcode" numcolumns="12">
            <column name="vf_certificate" title="certificate" numcolumns="6" order="100">
                <widget type="file" fieldname="vf_certificate" accept=".p12" readonly="dinamic"/>
            </column>
            <column name="vf_password" title="password" numcolumns="3" order="110">
                <widget type="password" fieldname="vf_password" readonly="dinamic"/>
            </column>
            <column name="vf_certificate_expiration" title="expiration" numcolumns="3" order="120">
                <widget type="date" fieldname="vf_certificate_expiration" readonly="true"/>
            </column>
            <column name="vf_representative_name" title="representative-name" numcolumns="6" order="130" display="none">
                <widget type="text" fieldname="vf_certificate_representative_name" readonly="true"/>
            </column>
            <column name="vf_representative_cif" title="representative-cif" numcolumns="6" order="140" display="none">
                <widget type="text" fieldname="vf_certificate_representative_cif" readonly="true"/>
            </column>
            <column name="vf_certificate_seal" title="seal" order="150">
                <widget type="checkbox" fieldname="vf_certificate_seal" readonly="true"/>
            </column>
            <column name="vf_debug_mode" title="debug-mode" order="160">
                <widget type="checkbox" fieldname="vf_debug_mode" readonly="true"/>
            </column>
        </group>
    </columns>
    <modals>
        <group name="vf-new-certificate" title="certificate" icon="fa-solid fa-file-upload">
            <column name="vf_file" title="file" numcolumns="12" order="100">
                <widget type="file" fieldname="vf_new_certificate" accept=".p12" required="true"/>
            </column>
            <column name="vf_password" title="password" numcolumns="12" order="110">
                <widget type="password" fieldname="vf_new_password" required="true"/>
            </column>
        </group>
    </modals>
</view>