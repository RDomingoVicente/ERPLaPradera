<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="text" fieldname="id" readonly="true"/>
        </column>
        <column name="company" order="110">
            <widget type="select" fieldname="idempresa">
                <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"/>
            </widget>
        </column>
        <column name="reference" order="120">
            <widget type="text" fieldname="reference"/>
        </column>
        <column name="start-exercise" order="130">
            <widget type="select" fieldname="start_codejercicio">
                <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="end-exercise" order="140">
            <widget type="select" fieldname="end_codejercicio">
                <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="status" order="150">
            <widget type="select" fieldname="status" translate="true">
                <values title="pending">pending</values>
                <values title="processing">processing</values>
                <values title="completed">completed</values>
            </widget>
        </column>
        <column name="creation-date" display="right" order="160">
            <widget type="datetime" fieldname="creation_date"/>
        </column>
        <column name="nick" display="none" order="170">
            <widget type="select" fieldname="nick">
                <values source="users" fieldcode="nick" fieldtitle="nick"/>
            </widget>
        </column>
    </columns>
</view>
