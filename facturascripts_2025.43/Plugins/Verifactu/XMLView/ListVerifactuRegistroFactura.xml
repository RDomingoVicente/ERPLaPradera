<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="text" fieldname="id"/>
        </column>
        <column name="company" order="110">
            <widget type="select" fieldname="idempresa">
                <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"/>
            </widget>
        </column>
        <column name="exercise" order="120">
            <widget type="select" fieldname="codejercicio">
                <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="invoice" order="130">
            <widget type="select" fieldname="idfactura" onclick="EditFacturaCliente">
                <values source="facturascli" fieldcode="idfactura" fieldtitle="codigo"/>
            </widget>
        </column>
        <column name="event" order="140">
            <widget type="text" fieldname="event"/>
        </column>
        <column name="mode" order="150">
            <widget type="select" fieldname="mode" translate="true">
                <values title="verifactu">verifactu</values>
                <values title="no-verifactu">no-verifactu</values>
            </widget>
        </column>
        <column name="json" display="center" order="160">
            <widget type="download" fieldname="file_json" class="btn btn-info btn-sm"/>
        </column>
        <column name="hash" display="center" order="170">
            <widget type="checkbox" fieldname="hash"/>
        </column>
        <column name="status" display="center" order="180">
            <widget type="text" fieldname="status"/>
        </column>
        <column name="creation-date" display="right" order="190">
            <widget type="datetime" fieldname="creation_date"/>
        </column>
    </columns>
</view>